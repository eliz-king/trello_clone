<h1><%= @board.title %></h1>

<% @board.lists.each do |list| %>
  <%= render 'lists/list', { list: list } %>
<% end %>

<%= link_to 'Add List to Board', new_board_list_path(@board) %>
<%= link_to 'Edit Board', edit_board_path(@board) %>
<%= link_to 'Delete Board', @board, method: :delete %>
<%= link_to 'Back Boards Home', boards_path %>
<hr>
<%= link_to "View lists for Board: #{@board.title}", board_lists_path(@board) %>
